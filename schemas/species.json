{
  "title": "Species",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.powerd6.org/schemas/species.json",
  "type": "object",
  "required": ["id", "name", "description"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "effects": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "type": { "const": "effect" }
        }
      }
    }
  },
  "additionalProperties": false
}
