{
  "title": "Character",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.powerd6.org/schemas/character.json",
  "type": "object",
  "required": [
    "id",
    "name",
    "character_points",
    "description",
    "species",
    "attribute_values",
    "acquired_focuses",
    "health_capacity",
    "inventory",
    "known_spells",
    "effects"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "character_points": {
      "type": "object",
      "properties": {
        "available": { "type": "number", "minimum": 0 },
        "total": { "type": "number", "minimum": 0 }
      }
    },
    "description": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "backstory": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "species": {
      "allOf": [
        { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
      ],
      "properties": {
        "model": { "const": "species" }
      },
      "$comment": "A reference to a species"
    },
    "attribute_values": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "attribute" },
          "value": {
            "type": "integer",
            "minimum": -3,
            "maximum": 5
          }
        }
      }
    },
    "acquired_focuses": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "focus" }
        }
      }
    },
    "health_capacity": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "injury" },
          "count": { "type": "number", "minimum": 0 }
        }
      }
    },
    "inventory": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "item" },
          "amount": { "type": "number", "minimum": 0 }
        }
      }
    },
    "known_spells": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "spell" }
        }
      }
    },
    "effects": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "https://schemas.powerd6.org/schemas/reference.json" }
        ],
        "properties": {
          "model": { "const": "effect" }
        }
      }
    }
  },
  "additionalProperties": false
}
