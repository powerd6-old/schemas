{
  "title": "Character",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.powerd6.org/schemas/character.json",
  "type": "object",
  "required": [
    "id",
    "name",
    "character_points",
    "description",
    "species",
    "attribute_values",
    "acquired_focuses",
    "health_capacity",
    "inventory",
    "known_spells",
    "effects"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "character_points": {
      "type": "object",
      "properties": {
        "available": { "type": "number", "minimum": 0 },
        "total": { "type": "number", "minimum": 0 }
      }
    },
    "description": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "backstory": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "species": {
      "$ref": "https://schemas.powerd6.org/schemas/reference.json",
      "$comment": "A reference to a species"
    },
    "attribute_values": {
      "type": "array",
      "items": {
        "type": "array",
        "items": [
          {
            "$ref": "https://schemas.powerd6.org/schemas/reference.json",
            "$comment": "A reference to an attribute"
          },
          {
            "type": "integer",
            "minimum": -3,
            "maximum": 5
          }
        ]
      }
    },
    "acquired_focuses": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.powerd6.org/schemas/reference.json",
        "$comment": "A reference to a focus"
      }
    },
    "health_capacity": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "$ref": "https://schemas.powerd6.org/schemas/reference.json",
            "$comment": "A reference to an injury"
          },
          "count": { "type": "number", "minimum": 0 }
        }
      }
    },
    "inventory": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.powerd6.org/schemas/reference.json",
        "$comment": "A reference to an item"
      }
    },
    "known_spells": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.powerd6.org/schemas/reference.json",
        "$comment": "A reference to a spell"
      }
    },
    "effects": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.powerd6.org/schemas/reference.json",
        "$comment": "A reference to an effect"
      }
    }
  },
  "additionalProperties": false
}
