{
  "title": "Module",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.powerd6.org/schemas/module.json",
  "type": "object",
  "required": ["id", "name", "description", "authors", "models"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "$ref": "https://schemas.powerd6.org/schemas/markdown-string.json"
    },
    "authors": {
      "type": "array",
      "items": {
        "$ref": "https://schemas.powerd6.org/schemas/author.json"
      }
    },
    "models": {
      "type": "object",
      "properties": {
        "^.$": { "type": "string" }
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "^.$": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
